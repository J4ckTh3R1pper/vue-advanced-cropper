{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015"
    ],
	"noEmitHelpers": true,
	"importHelpers": true,
	"allowJs": true,
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true,
	"forceConsistentCasingInFileNames": true,
	"isolatedModules": true,
	"jsx": "preserve",
	"module": "esnext",
	"moduleResolution": "node",
	"noEmit": true,
	"resolveJsonModule": true,
	"skipLibCheck": true,
	"baseUrl": ".",
	"paths": {
		"@/*": ["./src/*"]
	},
	"types": ["node", "vite/client"]
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/types.d.ts"
  ]
}
